{
  "name": "flux-desktop",
  "version": "0.1.0",
  "description": "Flux AI Coding Assistant - Desktop Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "start:renderer": "vite",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173/index.html && cross-env NODE_ENV=development electron .\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "flux",
    "ai",
    "coding",
    "assistant",
    "electron"
  ],
  "author": "Flux Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@vitejs/plugin-vue": "^5.1.4",
    "vite": "^5.4.10",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "node-pty": "^1.0.0",
    "vue": "^3.5.24",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "build": {
    "appId": "com.flux.desktop",
    "productName": "Flux",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "src/**/*",
      "package.json"
    ]
  }
}
